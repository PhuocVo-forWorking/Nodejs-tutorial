<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%= JSON.stringify(userEdit) %>
        <div class="topnav">
            <a href="/">Home</a>
            <a href="/create">Create Users</a>
        </div>
        <div class="form-add-new">
            <form action="/create-user" method="post">
                <fieldset>
                    <legend>Update a user</legend>

                    <div class="input-group">
                        <label>User Name: </label>
                        <input type="text" name="Name" value="<%= userEdit.USER_NAME %>" />
                    </div>
                    <div class="input-group">
                        <label>Address: </label>
                        <input type="text" name="Address" value="<%= userEdit.ADDRESS %>" />
                    </div>
                    <div class="input-group">
                        <label>Phone: </label>
                        <input type="text" name="Phone" value="<%= userEdit.PHONE %>" />
                    </div>
                    <div class="input-group">
                        <label>Email: </label>
                        <input type="text" name="Email" value="<%= userEdit.EMAIL %>" />
                    </div>
                    <div>
                        <button>Save</button>
                    </div>

                </fieldset>
            </form>

        </div>
</body>

</html>