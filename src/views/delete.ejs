<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <!-- <%= JSON.stringify(userEdit) %> -->
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>
    <div class="form-add-new">
        <form action="/delete-user" method="post">
            <fieldset>
                <legend>Delete a user</legend>
                <div class="input-group d-none">
                    <label>User Id: </label>
                    <input type="text" name="userId" value="<%= userEdit.USER_ID %>" />
                </div>
                <div class="input-group">
                    <label>Are you sure to delete this user with Name: </label>
                    <input type="text" name="Name" value="<%= userEdit.USER_NAME %>" />
                </div>
                <div>
                    <button>Confirm</button>
                </div>

            </fieldset>
        </form>

    </div>
</body>

</html>